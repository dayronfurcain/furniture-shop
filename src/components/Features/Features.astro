---
import { features } from '../../constants';
import MainLayout from '../../layouts/MainLayout.astro';
import Feature from './Feature.astro';
import { Image } from '@astrojs/image/components';
import { featureImg1, featureImg2, featureImg3 } from '../../assets';
---

<MainLayout>
  <section
    class="px-10 py-8 flex flex-col lg:flex-row items-center lg:items-start justify-between gap-x-12 gap-y-12"
  >
    <div class="flex flex-col justify-end items-start gap-4">
      <div class="flex justify-start items-baseline gap-2">
        <h2 class="font-bold text-3xl text-center">New Features</h2>
        <hr class="w-16 border-2 border-gray-600" />
      </div>
      <ul class="flex flex-col justify-start items-start gap-4">
        {
          features.map((feature) => (
            <li>
              <Feature {...feature} />
            </li>
          ))
        }
      </ul>
    </div>
    <div class="flex flex-col justify-between items-start gap-4">
      <Image
        src={featureImg1}
        width={undefined}
        height={undefined}
        alt="featureImg1"
        format="jpg"
        class="w-[255px] sm:w-[340px] aspect-video object-cover rounded-md shadow-md"
      />
      <div class="h-30 flex items-center justify-between gap-4 w-full">
        <Image
          src={featureImg2}
          width={undefined}
          height={undefined}
          alt="featureImg2"
          format="jpg"
          class="w-[100px] sm:w-40 aspect-video object-cover rounded-md shadow-md"
        /><Image
          src={featureImg3}
          width={undefined}
          height={undefined}
          alt="featureImg2"
          format="jpg"
          class="w-[100px] sm:w-40 aspect-video object-cover rounded-md shadow-md"
        />
      </div>
    </div>
  </section>
</MainLayout>
